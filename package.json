{
    "name": "halcyon-node-api",
    "private": true,
    "scripts": {
        "start": "nodemon --inspect app.js",
        "build": "tsc",
        "lint": "tslint -c tslint.json -p tsconfig.json",
        "format": "prettier --write \"src/**/*.{ts,json}\"",
        "precommit": "lint-staged"
    },
    "lint-staged": {
        "src/**/*.{ts,jsx,json}": [
            "prettier --write",
            "git add"
        ]
    },
    "dependencies": {
        "applicationinsights": "1.0.5",
        "axios": "0.18.0",
        "axios-retry": "3.1.1",
        "bcryptjs": "2.4.3",
        "body-parser": "1.18.3",
        "cors": "2.8.4",
        "dotenv": "6.0.0",
        "express": "4.16.3",
        "express-validator": "5.3.0",
        "jsonwebtoken": "8.3.0",
        "mongoose": "5.3.1",
        "morgan": "1.9.1",
        "nodemailer": "4.6.8",
        "speakeasy": "2.0.0",
        "string-format": "2.0.0",
        "swagger-ui-express": "4.0.1",
        "uuid": "3.3.2",
        "yamljs": "0.3.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "2.4.2",
        "@types/cors": "2.8.4",
        "@types/express": "4.16.0",
        "@types/jsonwebtoken": "7.2.8",
        "@types/mongoose": "5.2.22",
        "@types/morgan": "1.7.35",
        "@types/node": "10.12.1",
        "@types/nodemailer": "4.6.5",
        "@types/speakeasy": "2.0.3",
        "@types/string-format": "2.0.0",
        "@types/swagger-ui-express": "3.0.0",
        "@types/uuid": "3.4.4",
        "@types/yamljs": "0.2.30",
        "husky": "0.14.3",
        "lint-staged": "7.2.2",
        "nodemon": "1.18.4",
        "prettier": "1.14.3",
        "tslint": "5.11.0",
        "typescript": "3.1.5"
    }
}
