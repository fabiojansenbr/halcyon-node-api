{
    "name": "halcyon-node-api",
    "private": true,
    "scripts": {
        "start": "nodemon --inspect app.js",
        "lint": "eslint ./",
        "format": "prettier --write \"**/*.{ts,json}\"",
        "precommit": "lint-staged"
    },
    "lint-staged": {
        "**/*.{ts,jsx,json}": [
            "prettier --write",
            "git add"
        ]
    },
    "dependencies": {
        "applicationinsights": "1.0.5",
        "axios": "0.18.0",
        "axios-retry": "3.1.1",
        "bcryptjs": "2.4.3",
        "body-parser": "1.18.3",
        "cors": "2.8.4",
        "dotenv": "6.0.0",
        "express": "4.16.3",
        "express-validator": "5.3.0",
        "jsonwebtoken": "8.3.0",
        "mongoose": "5.3.1",
        "morgan": "1.9.1",
        "nodemailer": "4.6.8",
        "speakeasy": "2.0.0",
        "string-format": "2.0.0",
        "swagger-ui-express": "4.0.1",
        "uuid": "3.3.2",
        "yamljs": "0.3.0"
    },
    "devDependencies": {
        "eslint": "5.6.0",
        "husky": "0.14.3",
        "lint-staged": "7.2.2",
        "nodemon": "1.18.4",
        "prettier": "1.14.3"
    }
}
